@model BeerWeb.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "EditUser";
}

<h2>Edit User @Model.UserName</h2>
@using (Html.BeginForm(FormMethod.Post))
{
    <table class="table table-hover table-striped">
<tr>
            <td>Role:</td>
            <td>
                @Html.DropDownListFor(m => m.Role, Model.Roles,"choose a role")
                @Html.ValidationMessageFor(m => m.Role)
            </td>
        </tr>
    </table>
    <input class="btn-danger" type="submit" value="Save User" />
}
